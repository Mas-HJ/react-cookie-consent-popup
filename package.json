{
    "name": "react-cookie-consent-popup",
    "version": "1.5.0",
    "description": "A zero-dependency React cookie consent popup component with centered modal dialog, service management, script loading, and light/dark theme support",
    "repository": {
        "type": "git",
        "url": "https://github.com/Mas-HJ/react-cookie-consent-popup.git"
    },
    "homepage": "https://github.com/Mas-HJ/react-cookie-consent-popup#readme",
    "bugs": {
        "url": "https://github.com/Mas-HJ/react-cookie-consent-popup/issues"
    },
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./styles": "./dist/styles/style.css"
    },
    "sideEffects": false,
    "files": [
        "dist",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsx esbuild.config.ts",
        "postbuild": "tsc --emitDeclarationOnly && node -e \"const fs=require('fs');const rm=p=>{try{fs.rmSync(p,{recursive:true})}catch{}};rm('dist/core');rm('dist/config.d.ts');rm('dist/useConsentState.d.ts');rm('dist/useConsentActions.d.ts');rm('dist/useFocusTrap.d.ts');rm('dist/settings/ServiceItem.d.ts');rm('dist/settings/useSelectedServices.d.ts')\"",
        "dev": "tsx esbuild.config.ts --watch",
        "test": "jest",
        "test:dev": "jest --watch",
        "coverage": "jest --coverage",
        "preversion": "yarn test",
        "prepublishOnly": "yarn test && yarn build"
    },
    "keywords": [
        "react",
        "cookie",
        "consent",
        "popup",
        "modal",
        "gdpr",
        "privacy",
        "cookies",
        "cookie-consent",
        "cookie-banner",
        "zero-dependency"
    ],
    "license": "MIT",
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.23.9",
        "@babel/preset-react": "^7.23.3",
        "@babel/preset-typescript": "^7.23.3",
        "@testing-library/jest-dom": "^6.4.2",
        "@testing-library/react": "^14.2.1",
        "@types/jest": "^29.5.12",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "esbuild": "^0.25.0",
        "esbuild-sass-plugin": "^3.0.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.2.5",
        "react": "^18.2.0 || ^19.0.0",
        "react-dom": "^18.2.0 || ^19.0.0",
        "sass": "^1.70.0",
        "stylelint": "^16.2.1",
        "stylelint-config-property-sort-order-smacss": "^10.0.0",
        "stylelint-config-standard-scss": "^13.0.0",
        "stylelint-prettier": "^5.0.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.3.3"
    }
}
